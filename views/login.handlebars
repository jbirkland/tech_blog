
{{> navbar}}
<main class="container-fluid">
  <div class="row col-12 mt-5 mb-5">
    <div class="login-form col-md-6">
        <form>
            <h2 class="text-center">Log in</h2>       
            <div class="form-group">
                <input type="text" class="form-control" name= "username" id="username-login" placeholder="Username" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password-login" placeholder="Password" required="required">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block login-form">Log in</button>
            </div>     
        </form>
    </div>
    <div class="signup-form col-md-6">
        <form>
        <h2>Sign up</h2>
        <p class="hint-text">Create your account. It's free and only takes a minute.</p>
            <div class="form-group">
                <input type="text" class="form-control" name="username" id="username-signup" placeholder="Username" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" id="password-signup" placeholder="Password" required="required">
            </div> 
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg btn-block signup-form">Complete Signup!</button>
            </div>
        </form>
    </div>
  </div>
</main>

<script src="./js/login.js"></script>